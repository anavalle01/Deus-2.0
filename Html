    <script>
        // 1. Fila de Prioridade
        const requestQueue = [];
        
        function addRequest() {
            const type = document.getElementById('request-type').value;
            const text = document.getElementById('request-text').value;
            
            if (!text) {
                alert('Por favor, descreva seu pedido.');
                return;
            }
            
            let priority;
            switch(type) {
                case 'saude': priority = 1; break;
                case 'dinheiro': priority = 2; break;
                case 'amor': priority = 3; break;
                default: priority = 3;
            }
            
            requestQueue.push({ type, text, priority });
            requestQueue.sort((a, b) => a.priority - b.priority);
            
            updateQueueDisplay();
            document.getElementById('request-text').value = '';
        }
        
        function updateQueueDisplay() {
            const queueElement = document.getElementById('requests-queue');
            queueElement.innerHTML = '';
            
            if (requestQueue.length === 0) {
                queueElement.innerHTML = '<p>Nenhum pedido na fila.</p>';
                return;
            }
            
            const ul = document.createElement('ul');
            requestQueue.forEach(request => {
                const li = document.createElement('li');
                let typeText;
                switch(request.type) {
                    case 'saude': typeText = 'Saúde'; break;
                    case 'dinheiro': typeText = 'Dinheiro'; break;
                    case 'amor': typeText = 'Amor'; break;
                }
                li.textContent = `${typeText}: ${request.text}`;
                ul.appendChild(li);
            });
            
            queueElement.appendChild(ul);
        }
        
        function processNextRequest() {
            if (requestQueue.length === 0) {
                document.getElementById('processing-result').innerHTML = '<p>Nenhum pedido para processar.</p>';
                return;
            }
            
            const nextRequest = requestQueue.shift();
            document.getElementById('processing-result').innerHTML = `
                <p><strong>Processando:</strong> ${nextRequest.text}</p>
                <p><strong>Tipo:</strong> ${nextRequest.type}</p>
                <p>Pedido atendido com prioridade ${nextRequest.priority}.</p>
            `;
            
            updateQueueDisplay();
        }
        
        // 2. Debugging Ético
        function performMiracle() {
            const miracleType = document.getElementById('miracle-type').value;
            let miracleResult = '';
            let sideEffect = '';
            
            switch(miracleType) {
                case 'chuva':
                    miracleResult = 'Milagre realizado: Choveu no deserto!';
                    sideEffect = 'Efeito colateral: Plantas do deserto não adaptadas à umidade estão morrendo.';
                    break;
                case 'cura':
                    miracleResult = 'Milagre realizado: Doença curada instantaneamente!';
                    sideEffect = 'Efeito colateral: Hospitais estão ficando vazios, profissionais de saúde desempregados.';
                    break;
                case 'alimento':
                    miracleResult = 'Milagre realizado: Alimento apareceu para todos!';
                    sideEffect = 'Efeito colateral: Agricultores não podem vender seus produtos, economia agrícola em colapso.';
                    break;
            }
            
            document.getElementById('miracle-result').innerHTML = `<p><strong>${miracleResult}</strong></p>`;
            document.getElementById('side-effect').innerHTML = `<p class="important">${sideEffect}</p>`;
        }
        
        // 3. IA Deus 2.0
        function evaluateRequest() {
            const request = document.getElementById('human-request').value;
            
            if (!request) {
                alert('Por favor, faça seu pedido.');
                return;
            }
            
            // Análise ética simples
            let ethicalApproval = true;
            let ethicalMessage = '';
            let consequences = '';
            
            if (request.toLowerCase().includes('controlar') || request.toLowerCase().includes('obrigar')) {
                ethicalApproval = false;
                ethicalMessage = 'Rejeitado: Violação do livre-arbítrio.';
            } else if (request.toLowerCase().includes('matar') || request.toLowerCase().includes('ferir')) {
                ethicalApproval = false;
                ethicalMessage = 'Rejeitado: Violação da ética de não-violência.';
            } else if (request.toLowerCase().includes('dinheiro infinito')) {
                ethicalApproval = false;
                ethicalMessage = 'Rejeitado: Desequilíbrio econômico potencial.';
            } else {
                ethicalMessage = 'Aprovado: Pedido dentro dos parâmetros éticos.';
                
                // Gerar consequências aleatórias (simulação)
                const possibleConsequences = [
                    'Isso pode levar a um aumento na desigualdade social.',
                    'Consequência: outros podem querer o mesmo benefício.',
                    'Efeito colateral: mudanças nas relações interpessoais.',
                    'Isso pode alterar o equilíbrio natural do ecossistema.',
                    'Consequência positiva: aumento geral da felicidade.'
                ];
                
                consequences = possibleConsequences[Math.floor(Math.random() * possibleConsequences.length)];
            }
            
            document.getElementById('ethical-check').innerHTML = `
                <p><strong>Análise Ética:</strong> ${ethicalMessage}</p>
                ${ethicalApproval ? '<p>Pedido será processado com as devidas considerações.</p>' : '<p>Pedido não pode ser atendido.</p>'}
            `;
            
            if (ethicalApproval) {
                document.getElementById('request-consequences').innerHTML = `
                    <p><strong>Possíveis Consequências:</strong> ${consequences}</p>
                `;
            } else {
                document.getElementById('request-consequences').innerHTML = '';
            }
        }
        
        // 4. Controle de Versão
        function simulateGitHub() {
            document.getElementById('github-simulation').innerHTML = `
                <div style="margin-top: 20px; padding: 15px; background-color: #f0f8ff; border: 1px solid #002366;">
                    <h3>Simulação de Acesso ao GitHub</h3>
                    <p><strong>Repositório:</strong> github.com/etico/deus-2.0</p>
                    <p><strong>Último commit:</strong> Adicionadas regras éticas para manipulação de livre-arbítrio</p>
                    <p><strong>Issues abertas:</strong> 5</p>
                    <p><strong>Pull requests:</strong> 2</p>
                </div>
            `;
        }
        
        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            updateQueueDisplay();
        });
    </script>
